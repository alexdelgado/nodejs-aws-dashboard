//- Route53/index.pug
-
    var tmpl = {
        "title": "Route53 Hosted Zone",
        "active": "route53"
    }

doctype html
html
    head
        include ../_components/header.pug
    body.route53
        include ../_components/main-navigation.pug

        <div class="container">
            <h1>Route53 Hosted Zone</h1>
            <table id="hosted-zone-table" class="table table-striped table-hover table--sortable">
                <thead>
                    <tr>
                        <th width="10">#</th>
                        <th>Name <span class="header__sort-icon"></span></th>
                        <th>Type <span class="header__sort-icon"></span></th>
                        <th>Time to Live (TTL) <span class="header__sort-icon"></span></th>
                    </tr>
                </thead>
            </table>
            <div id="loading" class="loading">
                <img src="/static/img/ripple.svg" class="loading__icon">
            </div>
            <nav id="hosted-zone-pagination" class="load-more"></nav>
        </div>

        include ../_components/footer.pug